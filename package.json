{
  "name": "vendure-advanced-shipping",
  "description": "ðŸ“¦ A series of plugin for Vendure to add features to shipping using boxes, and shipping based on product dimensions.",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "lerna:bootstrap": "lerna link && lerna exec npm install",
    "bootstrap": "lerna link && lerna exec npm install",
    "watch": "lerna run watch --parallel",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "dev-server:start": "cd packages/dev-server && npm start",
    "codegen": "graphql-codegen --config gql-codegen.yml && lerna run codegen",
    "publish": "lerna publish from-git --yes --conventional-commits --create-release github"
  },
  "dependencies": {
    "@types/convert-units": "2.3.2",
    "@vendure-advanced-shipping/common": "file:packages/common",
    "@vendure-advanced-shipping/core": "file:packages/core",
    "@vendure-advanced-shipping/rodonaves": "file:packages/rodonaves",
    "convert-units": "2.3.4"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "8.3.4",
    "@graphql-codegen/cli": "1.15.3",
    "@graphql-codegen/fragment-matcher": "1.15.3",
    "@graphql-codegen/introspection": "1.15.3",
    "@graphql-codegen/near-operation-file-preset": "1.15.3",
    "@graphql-codegen/schema-ast": "1.15.3",
    "@graphql-codegen/typescript": "1.15.3",
    "@graphql-codegen/typescript-operations": "1.15.3",
    "@types/jest": "25.1.4",
    "@types/node": "12.12.0",
    "@typescript-eslint/eslint-plugin": "3.2.0",
    "@typescript-eslint/parser": "3.2.0",
    "@vendure/admin-ui": "0.13.0",
    "@vendure/admin-ui-plugin": "0.13.0",
    "@vendure/asset-server-plugin": "0.13.0",
    "@vendure/core": "0.13.0",
    "@vendure/create": "0.13.0",
    "@vendure/testing": "0.13.0",
    "@vendure/ui-devkit": "0.13.0",
    "codecov": "3.7.0",
    "commitlint": "8.3.5",
    "concurrently": "5.2.0",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "jest": "25.2.1",
    "lerna": "3.22.1",
    "mysql": "^2.18.1",
    "prettier": "2.0.5",
    "rimraf": "3.0.0",
    "sqlite3": "4.2.0",
    "ts-jest": "25.2.1",
    "ts-node": "8.4.1",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E  HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        [
          "start-case",
          "pascal-case"
        ]
      ]
    }
  }
}
